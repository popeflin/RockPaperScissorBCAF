<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SimulasiCicilan">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:text="Pinjaman "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPinjaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="monospace"
                android:text="Rp 1.000.000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/jmlUang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:max="29"
            android:progress="1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:text="Lama Pinjaman"
        android:textSize="20sp"
        android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/grpTenor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:lineSpacingExtra="10sp"
                android:text="3 Bulan"
                android:textSize="20sp"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:lineSpacingExtra="10sp"
                android:text="6 Bulan"
                android:textSize="20sp"
                android:typeface="normal" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:lineSpacingExtra="10sp"
                android:text="12 Bulan"
                android:textSize="20sp"
                android:typeface="normal" />
        </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="monospace"
        android:text="Interest Rate"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/lstBunga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHitung"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:onClick="hitungCicilan"
            android:text="Hitung" />
    </LinearLayout>

        <TextView
            android:id="@+id/txtCicilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cicilannya adalah :"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>